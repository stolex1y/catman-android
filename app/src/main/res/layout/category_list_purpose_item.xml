<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="ru.stolexiy.catman.ui.categorylist.model.CategoryListItem.PurposeItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/purpose_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:text="@{data.name}"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"
            app:layout_constraintEnd_toStartOf="@+id/frameLayout2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frameLayout2"
            tools:text="Purpose name" />

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:measureAllChildren="true"
            app:layout_constraintBottom_toBottomOf="@+id/purpose_deadline"
            app:layout_constraintEnd_toStartOf="@+id/purpose_deadline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/purpose_name"
            app:layout_constraintTop_toTopOf="@+id/purpose_deadline">

            <ImageView
                android:id="@+id/hot_purpose"
                android:layout_width="16dp"
                android:layout_height="17dp"
                android:layout_marginEnd="5dp"
                app:isGone="@{!data.burning}"
                app:srcCompat="@drawable/fire" />

        </FrameLayout>

        <TextView
            android:id="@+id/purpose_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@{data.deadline}"
            app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
            app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/frameLayout2"
            app:layout_constraintTop_toTopOf="@+id/relativeLayout"
            tools:text="01.01.2023" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="37dp"
            android:layout_height="37dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/purpose_deadline"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/purpose_progress_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{data.textProgress}"
                android:textAlignment="center"
                android:textSize="11sp"
                tools:text="50%" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/purpose_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:progress="@{data.progress}"
                app:indicatorSize="37dp"
                app:trackThickness="2.5dp"
                tools:progress="50" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
